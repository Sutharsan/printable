{#
/**
 * @file
 * Default theme implementation for printer friendly version of entities.
 *
 * Available variables:
 * - title: Top level node title.
 * - base_url: URL to the home page.
 *
 * @see template_preprocess_printable()
 *
 * @ingroup themeable
 */
#}
<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <title>{{ title }}</title>
    <style>
    .node_view ul li{
    display:none;
    }
    </style>
    <base href="{{ base_url }}" />
    <link type="text/css" rel="stylesheet" href="printable/css/drupal-printable.css" />
    {% if jquery is defined %}
      <script src="{{ jquery }}"></script>
      {% if close_script is defined %}
        <script type="text/javascript" src="{{ close_script }}"></script>
      {% else %}
        <script type="text/javascript" src="{{ send_script }}"></script>
      {% endif %}
    {% endif %}
  </head>
  <body>
  {{ header }}
  {{ content }}
  <hr/>
  <strong>Source URL:</strong> <i>{{ source_url }}</i>
  {{ footer }}
  </body>
</html>
